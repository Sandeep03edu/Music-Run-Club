<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="songImage">
        <item name="android:layout_height"> 100dp </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="songName">
        <item name="android:layout_width">match_parent </item>
        <item name="android:layout_height">wrap_content </item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Back</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:onClick">back</item>
    </style>

    <style name="nextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:text">Next</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:onClick">next</item>
    </style>

    <style name="nowPlaying">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_weight">1.8</item>
        <item name="android:text">Now Playing</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>